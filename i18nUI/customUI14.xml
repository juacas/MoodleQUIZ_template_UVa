<customUI onLoad="RibbonOnLoad" xmlns="http://schemas.microsoft.com/office/2009/07/customui">
  <ribbon>
    <tabs>
      <tab id="MoodleAdaptorAddIn"
          getLabel="GetLabel">
        <group id="grpHelp"
            getLabel="GetLabel">
          <button size="large"
              id="btnHelp"
              getLabel="GetLabel"
              image="logoUVAeduvalab"
              visible="true"
              onAction="ShowHelp"/>
        </group>
        <group id="grpSingleChoice"
            getLabel="GetLabel">
          <button size="large"
              id="btnNewSingleChoice"
              getLabel="GetLabel"
              image="SingleChoice"
              onAction="AddSingleChoiceQ"
              getSupertip="GetSupertip"
              visible="true"/>
        <button size="large"
              id="btnMarkSingleChoice"
              getLabel="GetLabel"
              image="SingleChoiceMark"
              onAction="MarkSingleChoiceQ"
              getSupertip="GetSupertip"
              visible="true"/>
          <button size="large"
              id="btnRightWrongSingleChoice"
              getLabel="GetLabel"
              image="rightwrong"
              onAction="MarkTrueAnswer"
              getSupertip="GetSupertip"
              visible="true"/>
          <!--<button size="large"
              id="Notmarked_3_33945246"
              label="No respondo"
              image="noanswer"
              onAction="SetUnmarked"
              supertip="Marca esta línea como opción de 0 puntos que sirve para poder dejar sin responder la pregunta en caso de haberla marcado por error"
              visible="true"/>-->
          <button size="normal"
              id="btnWeightsSingleChoice"
              getLabel="GetLabel"
              image="weights"
              onAction="SetAnswerWeights"
              getSupertip="GetSupertip"
              visible="true"/>
          <button size="normal"
              id="btnRemoveWeightsSingleChoice"
              getLabel="GetLabel"
              image="noweights"
              onAction="RemoveAnswerWeightsFromTheSelection"
              getSupertip="GetSupertip"
              visible="true"/>
        </group>
        <group id="grpMultipleChoice"
            getLabel="GetLabel">
          <button size="large"
              id="btnNewMultipleChoice"
              getLabel="GetLabel"
              image="MultipleChoice"
              onAction="AddMultipleChoiceQ"
              getSupertip="GetSupertip"
              visible="true"/>
         <button size="large"
              id="btnMarkMultipleChoice"
              getLabel="GetLabel"
              image="MultipleChoiceMark"
              onAction="MarkMultipleChoiceQ"
              getSupertip="GetSupertip"
              visible="true"/>
          <button size="large"
              id="btnRightWrongMultipleChoice"
              getLabel="GetLabel"
              image="rightwrong"
              onAction="MarkTrueAnswer"
              getSupertip="GetSupertip"
              visible="true"/>
          <button size="normal"
              id="btnWeightsMultipleChoice"
              getLabel="GetLabel"
              image="weights"
              onAction="SetAnswerWeights"
              getSupertip="GetSupertip"
              visible="true"/>
          <button size="normal"
              id="btnRemoveWeightsMultipleChoice"
              getLabel="GetLabel"
              image="noweights"
              onAction="RemoveAnswerWeightsFromTheSelection"
              getSupertip="GetSupertip"
              visible="true"/>
        </group>
        <group id="grpMatching"
            getLabel="GetLabel">
          <button size="large"
              id="btnNewMatching"
              getLabel="GetLabel"
              image="relation"
              getSupertip="GetSupertip"
              onAction="AddMatchingQ"
              visible="true"/>
        </group>
        <group id="grpTrueFalse"
            getLabel="GetLabel">
          <button size="large"
              id="btnTrueStatement"
              getLabel="GetLabel"
              imageMso="TagMarkComplete"
              onAction="AddTrueStatement"
              getSupertip="GetSupertip"
              visible="true"/>
          <button size="large"
              id="btnFalseStatement"
              getLabel="GetLabel"
              imageMso="Delete"
              onAction="AddFalseStatement"
              getSupertip="GetSupertip"
              visible="true"/>
        </group>
        <group id="grpShortAnswer"
            getLabel="GetLabel">
          <button size="large"
              id="btnNewShortAnswer"
              getLabel="GetLabel"
              imageMso="MailMergeResultsPreview"
              onAction="AddShortAnswerQ"
              getSupertip="GetSupertip"
              visible="true"/>
        </group>
        <group id="grpNumerical"
            getLabel="GetLabel">
          <button size="large"
              id="btnNewNumerical"
              getLabel="GetLabel"
              imageMso="ConstrainNumeric"
              onAction="AddNumericalQ"
              getSupertip="GetSupertip"
              visible="true"/>
        </group>
        <group id="grpMissingWord"
            getLabel="GetLabel">
          <button size="large"
              id="btnNewMissingWord"
              getLabel="GetLabel"
              image="blank"
              onAction="AddMissingWordQ"
              getSupertip="GetSupertip"
              visible="true"/>
          <button size="large"
              id="btnMarkBlank"
              getLabel="GetLabel"
              image="markblank"
              onAction="MarkBlankWord"
              getSupertip="GetSupertip"
              visible="true"/>
        </group>
        <group id="grpGeneral"
            getLabel="GetLabel">
          <button size="large"
              id="btnFeedback"
              getLabel="GetLabel"
              image="feedback"
              onAction="AddQuestionFeedback"
              getSupertip="GetSupertip"
              visible="true"/>
          <control size="large"
              idMso="FileSave"
              getSupertip="GetSupertip"
              visible="true"/>
          <button size="large"
              id="btnExportToMoodle"
              getLabel="GetLabel"
              imageMso="OutlineDemoteToBodyText"
              getSupertip="GetSupertip"
              onAction="ExportToGIFT"
              visible="true"/>
        </group>
      </tab>
    </tabs>
  </ribbon>
</customUI>